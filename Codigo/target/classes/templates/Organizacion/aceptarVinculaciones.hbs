    <title>Mi impacto ambiental - Organizacion</title>
    <link href="/organizacion/styleOrganizacion.css" rel="stylesheet" type="text/css">
</head>
<body>
    <header>
        <h1>MI IMPACTO AMBIENTAL</h1>
        <nav class="navbar navbar-expand-lg" style="background-color: #e3f2fd;">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Organización</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse navbarLinks" id="navbarSupportedContent">
                              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                  <li class="nav-item">
                                      <h3 id="nombreUsuario">{{organizacion.nombre}}</h3>
                                  </li>
                                <li class="nav-item">
                                     <a class="nav-link active" aria-current="page" href="/organizaciones/{{organizacion.id}}">Home</a>
                                </li>
                                <li class="nav-item dropdown">
                                  <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Acciones
                                  </a>
                                  <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/organizaciones/{{organizacion.id}}/registro_mediciones">Registrar medición</a></li>
                                    <li><a class="dropdown-item" href="/organizaciones/{{organizacion.id}}/aceptar_vinculacion">Aceptar vinculación</a></li>
                                    <li><a class="dropdown-item" href="/organizaciones/{{organizacion.id}}/recomendaciones">Ver recomendaciones</a></li>
                                    <li><a href="/organizaciones/{{organizacion.id}}/hc" class="dropdown-item">Calculadora HC</a></li>
                                    <li><a href="/organizaciones/{{organizacion.id}}/reportes" class="dropdown-item">Visualizar reportes</a></li>
                                  </ul>
                                </li>
                                <li class="nav-item">
                                  <a class="nav-link" href="../login/login.html">Cerrar sesión</a>
                                </li>
                              </ul>
                            </div>
            </div>
          </nav>
    </header>
    <main style="background-image: linear-gradient(to left, #3aa6b9, #1647e9); display: flex; flex-direction: column; align-items: center;">
        <h1>ACEPTAR VINCULACIÓN DE TRABAJADORES</h1>
        <h4 style="background-color: rgb(161, 161, 161); margin-bottom: 0; width: 85%;">Listado de solicitantes</h4>
        <section style="background-color: white; height: 300px; width: 85%;">
            <table id="listaSolicitantes" style="width: 100%;">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Sector</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {{#each solicitudes}}
                <tr id="solicitante{{id}}" class="solicitante" onClick="elegirSolicitante({{id}})">

                    <td>{{nombre}}</td>
                    <td>{{mail}}</td>
                    <td>{{telefono}}</td>
                    <td>{{sector.nombre}}</td>
                    <form method = "post" action = "aceptar_vinculacion/{{id}}/aceptar">
                    <td> <button type="submit" class="btn btn-success btn-lg">Aceptar</button></td>
                    </form>
                    <form method = "post" action = "aceptar_vinculacion/{{id}}/rechazar">
                    <td> <button type="submit" class="btn btn-danger btn-lg">RECHAZAR</button></td>
                    </form>
                </tr>
                {{/each}}
                </tbody>
            </table>
        </section>
        <section style="display: flex; justify-content: space-evenly; width: 100%; margin-top: 1rem;">

        </section>
    </main>
    <footer style="background-color: black;">
        <p style="color: white;">@2022 Todos los derechos reservados</p>
    </footer>
    <!-- JavaScript Bundle with Popper -->
    <script src="./aceptarVinculaciones.js"></script>
    <script src="../../Public/navbar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>