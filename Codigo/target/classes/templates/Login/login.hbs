<!DOCTYPE html>
<html lang="en">
<head>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi impacto ambiental - Login</title>
    <link href="login/login.css" rel="stylesheet" type="text/css">
</head>
<body>

    <header>
        <h1>MI IMPACTO AMBIENTAL</h1>
    </header>

    <main class="main palevioletred">
        <section id="login">
                        {{#if fail}}
                            <div class="alert alert-danger" role="alert">
                              El nombre de usuario o contraseña son incorrectos, intente nuevamente!
                            </div>
                        {{/if}}
                        {{#if signupsuccess}}
                            <div class="alert alert-success" role="alert">
                              Se ha creado el usuario con exito!
                            </div>
                        {{/if}}
            <h1>LOG-IN</h1>
            <form method="POST" action="/log_in" {{!--id="formularioLogin" --}} class="formul">
                <div class="bordeForm">
                    <h4>Ingrese un usuario</h4>
                    <input id="userName" class="form-control inputForm" type="text" placeholder="Nombre Usuario" name="nombre_de_usuario">
                    <h4>Ingrese una contraseña</h4>
                    <input type="password" id="userPassword" class="form-control inputForm" type="text" placeholder="Contraseña Usuario" name="contrasenia">
                </div>

                <a class="botonCrearCuenta">CREAR CUENTA</a>
                <button id="btnIngresar" type="submit" class="botonConfirmacion btn btn-lg btn-info">INGRESAR</button>
            </form>
        </section>
        <section id="crearCuenta">
            <h1>CREAR CUENTA</h1>

            <form method="POST" action="/log_in/signup" {{!--id="formularioRegistro"--}} class="formul">
                <div class="bloqueCrearCuenta">
                    <div class="bordeForm">
                        <h4>Ingrese un usuario</h4>
                        <input id="newUserName" class="form-control inputForm" type="text" placeholder="Nombre Usuario" name = "nombre_de_usuario">
                        <h4>Ingrese una contraseña</h4>
                        <input type="password" id="newUserPassword" class="form-control inputForm" type="text" placeholder="Contraseña Usuario" name = "contrasenia">
                        <h4>Ingrese un email</h4>
                        <input type="email" id="newUserEmail" class="form-control inputForm" placeholder="Email Usuario" name= "email">
                        <h4>Ingrese un teléfono</h4>
                        <input type="number" id="newUserPhone" class="form-control inputForm" placeholder="Telefono Usuario" name= "telefono">
                        <h4>Ingrese un nombre</h4>
                        <input type="text" class="form-control inputForm" placeholder="Nombre" name= "nombre">
                        <h4>Ingrese un apellido</h4>
                        <input type="text" class="form-control inputForm" placeholder="Apellido" name= "apellido">
                        <h4>Ingrese tipo de documento</h4>
                        <input type="text" class="form-control inputForm" placeholder="Tipo Documento" name= "tipoDoc">
                        <h4>Ingrese nro de documento</h4>
                        <input type="text" class="form-control inputForm" placeholder="Numero Documento" name= "nroDoc">
                    </div>
                    <button id="btnRegistro" type="button submit" class="botonConfirmacion btn btn-lg btn-info">CREAR CUENTA</button>
                    <a class="botonVolver">Volver</a>
                </div>
            </form>
        </section>

    </main>
    <footer>
        <p class="blanco">@2022 Todos los derechos reservados</p>
    </footer>
    <!-- JavaScript Bundle with Popper -->
    <script src="login/login.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>