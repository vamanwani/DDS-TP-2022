    <script>
          let tiposTransporte = document.querySelector(".tipoTransporte")
          tiposTransporte.addEventListener("change", cambiarTipoTransporte)
          function cambiarTipoTransporte(e){
            e.preventDefault()
            let tipo = this.value
            let html = ``;
            switch(tipo){
              case "particular":{
                html+=`
                <select name = "tipo_vehiculo" id="valueVehiculo" class="form-select" aria-label="Default select example">
                    <option selected value="">Tipo Vehiculo</option>
                    <option value="MOTO">Moto</option>
                    <option value="AUTO">Auto</option>
                    <option value="CAMIONETA">Camioneta</option>
                </select>
                <select id="valueCombustible" class="form-select" aria-label="Default select example" name ="tipo_combustible">
                    <option selected value="">Tipo Combustible</option>
                    <option value="GNC">GNC</option>
                    <option value="Nafta">Nafta</option>
                    <option value="Electrico">Eléctrico</option>
                    <option value="Gasoil">Gasoil</option>
                </select>
                `
                break;
              }
              case "publico":{
                html+=`
                Para transporte público:
                <select name = "tipo_transporte_publico" id="valueTransportePublico" class="form-select tipoPublico" aria-label="Default select example">
                    <option value="" selected>Tipo Transporte</option>
                    <option value="Tren">Línea Férrea</option>
                    <option value="Subte">Línea Subterráneo</option>
                    <option value="Colectivo">Colectivo</option>
                </select>
                <div class="contenidoLinea"></div>
                `
                break;
              }
              case "contratado":{
                html+=`
                Para servicio contratado:
                    <input name = "tipo_servicio_contratado" id="valueServicio" type="text" class="form-control" id="tipoServicioContratado" placeholder="Tipo servicio">
                `
                break;
              }
              case "analogico":{
                html+=`
                Para transporte analógico:
                                  <select name= "tipo_transporte_analogico" id="valueTransporteAnalogico" class="form-select" aria-label="Default select example">
                                    <option value="" selected>Tipo Transporte</option>
                                    <option value="Bicicleta">Bicicleta</option>
                                    <option value="Pie">Pie</option>
                                  </select>
                `
                break;
              }
              default: break;
            }
            document.querySelector("#contenidoTransporteElegido").innerHTML = html;
            document.querySelector(".scriptPublico").innerHTML = `
                  let tipoPublico = document.querySelector(".tipoPublico")
                  tipoPublico.addEventListener("change", cambiarTipoPubico)
            `
          }
          function cambiarTipoPubico(e){
            e.preventDefault()
            console.log("entro")
            let tipo = this.value
            let html = ``;
            switch(tipo){
              case "Tren":{
                html+= `
                <select name = "linea" class="form-select" aria-label="Default select example">
                    {{#each trenes}}
                        <option value="id" selected>{{linea}}</option>
                    {{/each}}
                </select>
                `
                break;
              }
              case "Subte":{
                html+= `
                <select name = "linea" class="form-select" aria-label="Default select example">
                    {{#each subtes}}
                        <option value={{linea}} selected>{{linea}}</option>
                    {{/each}}
                </select>
                `
                break;
              }
              case "Colectivo":{
                html+= `
                <select name = "linea" class="form-select" aria-label="Default select example">
                    {{#each colectivos}}
                        <option value="id" selected>{{linea}}</option>
                    {{/each}}
                </select>
                `
                break;
              }
              default: break;
            }
            document.querySelector(".contenidoLinea").innerHTML=html;
          }
        </script>
