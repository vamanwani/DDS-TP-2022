{{#partial "contenidoMiembro" }}
<header>
    <h1>MI IMPACTO AMBIENTAL</h1>
    <nav class="navbar navbar-expand-lg" style="background-color: #e3f2fd;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Miembro</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse navbarLinks" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <h3 id="nombreUsuario">--NOMBRE USUARIO--</h3>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="./indexMiembro.hbs">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Acciones
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="./editarTrayectos.hbs">Editar Trayectos</a></li>
                            <li><a class="dropdown-item active" href="#">Unirse a Organización</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../Login/login.hbs">Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<main style="background-color: #b854b8;">
    <h1>UNIRSE A ORGANIZACION</h1>
    <h3 style="background-color: rgb(175, 174, 174); margin-bottom: 0;">LISTADO DE ORGANIZACIONES</h3>
    <div style="background-color: white; height: 300px;">
        <table id="listaOrganizaciones" style="width: 100%;">
            <tr>
                <th>ID</th>
                <th>Tipo</th>
                <th>Clasificacion</th>
            </tr>
            {{#each organizaciones}}
                <tr class="opcionOrg org{{id_organizacion}}" onClick="elegirOrg({{id_organizacion}})">
                  <th>{{id_organizacion}}</th>
                  <th>{{tipo_org}}</th>
                  <th>{{clasificacion_org}}</th>
                </tr>
              {{/each}}
        </table>
    </div>
    <button id="btnSolicitarUnirse" type="button" class="btn btn-lg"
        style="background-color: rgb(4, 197, 45); margin-top: 1rem;">SOLICITAR UNIRSE</button>
</main>
<footer style="background-color: black;">
    <p style="color: white;">@2022 Todos los derechos reservados</p>
</footer>
<!-- JavaScript Bundle with Popper -->
<script src="../../Public/navbar.js"></script>
<script src="../../Public/miembro/unirseAOrg.js"></script>
