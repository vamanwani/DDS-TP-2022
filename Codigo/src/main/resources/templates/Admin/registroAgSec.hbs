    </footer>
    <!-- JavaScript Bundle with Popper -->

    <script>
            let tipoSector = document.querySelector("#selectTipoSector")

            tipoSector.addEventListener("change", mostrarProvincias)
            function mostrarProvincias(e){
              e.preventDefault();
              let tipo = this.value
              if(tipo == "Provincia"){
                    let html = `
                         <select style="margin-top:2rem" class="form-select" aria-label="Default select example">
                                             <option value="" selected>Provincia</option>
                                             <option class="optionLocalidades" value="CABA">CABA</option>
                                             <option class="optionLocalidades" value="Buenos Aires">Buenos Aires</option>
                                             <option class="optionLocalidades" value="Cordoba">Cordoba</option>
                        </select>
                   `;
                    document.querySelector(".provincias").innerHTML = html;
              }
              else{
                document.querySelector(".provincias").innerHTML=""
              }

            }
        </script>
